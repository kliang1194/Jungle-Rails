<h1>Login</h1>

<%= form_tag '/login' do %>
  <div class="form-group">
    Email:  <%= text_field_tag :email, "", class: 'form-control', placeholder: 'Email' %>
  </div>
  <div class="form-group">
    Password: <%= password_field_tag :password, "", class: 'form-control', placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  </div>
<% end %>